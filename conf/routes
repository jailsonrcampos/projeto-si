# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home
GET     /                           	 controllers.Application.index()

# Logout
GET     /logout							 controllers.Login.logout()

# Login
GET     /login                           controllers.Login.mostrarFormulario()
POST    /login                           controllers.Login.autenticar()

# Registro
GET     /registrar                       controllers.Registro.mostrarFormulario()
POST    /registrar                       controllers.Registro.registrar()
GET     /registrar/ok                    controllers.Registro.registrado()

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                 			controllers.Assets.at(path="/public", file)
